<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_profile" />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/wallet_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                tools:ignore="ContentDescription"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_card" />

            <TextView
                android:id="@+id/wallet_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/wallet"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/orders_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                tools:ignore="ContentDescription"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/orders_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/order_history"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/support_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_chat" />

            <TextView
                android:id="@+id/support_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/support"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/phone_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_call" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/mail_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_mail" />

            <TextView
                android:id="@+id/mail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/mail"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/inst_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_inst" />

            <TextView
                android:id="@+id/inst_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/inst"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/site_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_globe" />

            <TextView
                android:id="@+id/site_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/site"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

            <ImageView
                android:id="@+id/address_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_location" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stores"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/black"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/about_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_info"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"/>

        </GridLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>